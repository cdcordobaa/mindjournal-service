{
  "compilerOptions": {
    "preserveConstEnums": true,
    "module": "CommonJS",
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2018",   
    "outDir": ".build",   
    "moduleResolution": "node",
    "lib": ["es2018"],    
    "rootDir": "./src"   
  },
  "include": [
    "src/**/*"   
  ],
  "exclude": [
    "node_modules",
    "./build",     
    "*.config.js"
  ]
}
